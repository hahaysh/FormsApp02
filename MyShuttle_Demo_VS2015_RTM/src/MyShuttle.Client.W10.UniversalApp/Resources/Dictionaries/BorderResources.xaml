<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BorderBase" TargetType="Border">
    </Style>

    <Style x:Key="MapBorder" TargetType="Border" BasedOn="{StaticResource BorderBase}">
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush" Value="#E3E4E6"/>
    </Style>

    <Style x:Key="TileBorder" TargetType="Border" BasedOn="{StaticResource BorderBase}">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#E3E4E6"/>
    </Style>

</ResourceDictionary>
