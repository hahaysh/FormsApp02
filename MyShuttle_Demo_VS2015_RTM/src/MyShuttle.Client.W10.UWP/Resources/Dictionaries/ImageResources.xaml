<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShuttle.Client.W10.UniversalApp.Resources.Dictionaries">

    <Style x:Key="ImageHeader" TargetType="Image">
        <Setter Property="Source" Value="/Resources/Images/bg1920.png"/>
        <Setter Property="Stretch" Value="UniformToFill"/>
        <Setter Property="Height" Value="76"/>
    </Style>

    <Style x:Key="DevicePushpinImage" TargetType="Image">
        <Setter Property="Width" Value="30"/>
        <Setter Property="Source" Value="/Resources/Images/pin.png"/>
    </Style>

    <Style x:Key="FreeVehiclePushpinImage" TargetType="Image">
        <Setter Property="Width" Value="25"/>
        <Setter Property="Source" Value="/Resources/Images/free.png"/>
    </Style>

    <Style x:Key="OccupiedVehiclePushpinImage" TargetType="Image" BasedOn="{StaticResource FreeVehiclePushpinImage}">
        <Setter Property="Source" Value="/Resources/Images/ocuppied.png"/>
    </Style>

    <Style x:Key="SelectedVehiclePushpinImage" TargetType="Image" BasedOn="{StaticResource FreeVehiclePushpinImage}">
        <Setter Property="Source" Value="/Resources/Images/freeselected.png"/>
    </Style>

    <Style x:Key="CarrierImage" TargetType="Image">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Width" Value="50"/>
    </Style>

</ResourceDictionary>
