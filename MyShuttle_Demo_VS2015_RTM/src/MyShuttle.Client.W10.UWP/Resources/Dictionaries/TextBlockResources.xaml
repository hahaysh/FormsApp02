<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="TextBlockBase" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe WP"/>
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="TextWrapping" Value="NoWrap"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <Style x:Key="LabelBlock" TargetType="TextBlock" BasedOn="{StaticResource TextBlockBase}">
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="DarkLabelBlock" TargetType="TextBlock" BasedOn="{StaticResource LabelBlock}">
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Key="TitleBlock" TargetType="TextBlock" BasedOn="{StaticResource TextBlockBase}">
        <Setter Property="Foreground" Value="{StaticResource PrimaryForegroundBrush}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="SemiLight" />
        <Setter Property="Margin" Value="0,16" />
    </Style>

    <Style x:Key="PrimaryLabelBlock" TargetType="TextBlock" BasedOn="{StaticResource LabelBlock}">
        <Setter Property="Foreground" Value="{StaticResource PrimaryForegroundBrush}" />
    </Style>


</ResourceDictionary>
